@using MvcProje.Models.Entity
@model List<TblUrunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.UrunID</th>
                <td>@urn.UrunAdi</td>
                <td>@urn.Marka</td>
                <td>@urn.UrunKategori</td>
                <td>@urn.Fiyat</td>
                <td>@urn.Stok</td>
                <td><a href="/Urun/Sil/@urn.UrunID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@urn.UrunID" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    </tbody>
</table>

<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün Ekle</a>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>


<script>
    $('#tbl1').DataTable();
</script>