@using MvcProje.Models.Entity
@model List<TblMusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b>Aranacak Müşeri Adı:</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <th>@mus.MusteriID</th>
                <td>@mus.MusteriAdi</td>
                <td>@mus.MusteriSoyadi</td>
                @*<td><a href="/Musteri/Sil/@mus.MusteriID" class="btn btn-danger">Sil</a></td>*@
                <td>@Html.ActionLink("Sil", "Sil", new { id = mus.MusteriID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstediğinizden Emin misiniz?')" })</td>
                <td><a href="/Musteri/MusteriGetir/@mus.MusteriID" class="btn btn-success">Güncelle</a></td>
                @*<td>@Html.ActionLink("Sil", "Sil", new { id=mus.MusteriID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek istediğinize emin misiniz?')" })</td>*@
            </tr>
        }
    </tbody>
</table>

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>